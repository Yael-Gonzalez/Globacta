<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.evento.DetalleEventoController"
            prefWidth="600" prefHeight="400" style="-fx-background-color: white;">

    <!-- Título principal -->
    <Label fx:id="lblNombreEvento" layoutX="20" layoutY="20" text="Nombre del evento"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Botón azul volver -->
    <Button fx:id="btnVolver" layoutX="550" layoutY="20" prefWidth="32" prefHeight="32"
            style="-fx-background-color: #1E90FF; -fx-background-radius: 20;">
        <graphic>
            <ImageView fitWidth="20" fitHeight="20">
                <Image url="@icono_flecha_derecha.png"/>
            </ImageView>
        </graphic>
    </Button>

    <!-- Contenedor gris -->
    <AnchorPane layoutX="20" layoutY="60" prefWidth="560" prefHeight="300"
                style="-fx-background-color: #dcdfe3; -fx-background-radius: 15;">

        <!-- Descripción -->
        <VBox fx:id="boxDescripcion" layoutX="20" layoutY="20" prefWidth="300" prefHeight="200"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
            <Label fx:id="lblDescripcionTitulo" text="Descripción" style="-fx-font-weight: bold;" />
            <Label fx:id="lblDescripcionContenido" text="Muestra la descripción del evento e imagen del evento" wrapText="true" />
            <ImageView fx:id="imgEvento" fitWidth="280" fitHeight="120" preserveRatio="true">
                <Image url="@imagen_evento.png" />
            </ImageView>
        </VBox>

        <!-- Caja Lugar -->
        <VBox layoutX="340" layoutY="30" prefWidth="180" prefHeight="60"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
            <HBox spacing="10">
                <ImageView fitWidth="20" fitHeight="20">
                    <Image url="@icono_ubicacion.png"/>
                </ImageView>
                <Label fx:id="lblLugar" text="Lugar de evento" style="-fx-font-weight: bold;" />
            </HBox>
            <Label fx:id="lblLugarInfo" text="Indica lugar del evento" style="-fx-font-size: 11;" />
        </VBox>

        <!-- Caja Fecha -->
        <VBox layoutX="340" layoutY="110" prefWidth="180" prefHeight="60"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
            <HBox spacing="10">
                <ImageView fitWidth="20" fitHeight="20">
                    <Image url="@icono_fecha.png"/>
                </ImageView>
                <Label fx:id="lblFechas" text="Fecha de Inicio Y Fin" style="-fx-font-weight: bold;" />
            </HBox>
            <Label fx:id="lblFechasInfo" text="Indica la fecha de inicio" style="-fx-font-size: 11;" />
        </VBox>

        <!-- Botón Ver Asambleas -->
        <Button fx:id="btnVerAsambleas" layoutX="60" layoutY="240" prefWidth="180" text="Ver Asambleas Disponibles"
                style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-background-radius: 10;" />

        <!-- Botón Editar Evento -->
        <Button fx:id="btnEditarEvento" layoutX="320" layoutY="240" prefWidth="150" text="Editar evento"
                style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-background-radius: 10;" />

    </AnchorPane>

</AnchorPane>
