<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.evento.EditarEventoController">

    <children>
        <!-- Contenedor principal -->
        <VBox layoutX="20.0" layoutY="54.0"
              prefWidth="560"
              spacing="12"
              style="-fx-background-color: #d9dbe0; -fx-background-radius: 15; -fx-padding: 20;">
            <children>
                <GridPane hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100.0" />
                        <ColumnConstraints minWidth="280.0" />
                        <ColumnConstraints minWidth="20.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <children>
                        <Label text="Nombre" />
                        <TextField fx:id="txtNombre"
                                   prefHeight="39.0"
                                   prefWidth="397.0"
                                   promptText="Nombre"
                                   GridPane.columnIndex="1" />

                        <Label text="Lugar" GridPane.rowIndex="1" />
                        <TextField fx:id="txtLugar"
                                   promptText="Lugar"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="1" />

                        <Label text="Inicio" GridPane.rowIndex="2" />
                        <TextField fx:id="txtFechaInicio"
                                   promptText="Inicio"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="2" />

                        <Label text="Término" GridPane.rowIndex="3" />
                        <TextField fx:id="txtFechaFin"
                                   prefHeight="39.0"
                                   prefWidth="442.0"
                                   promptText="Fin"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="3" />

                        <Label text="Descripción" GridPane.rowIndex="4" />
                        <TextField fx:id="txtDescripcion"
                                   promptText="Descripción"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="4" />
                    </children>
                </GridPane>

                <Button fx:id="btnImagen"
                        prefHeight="41.0"
                        prefWidth="258.0"
                        style="-fx-border-style: dashed; -fx-background-color: white;"
                        text="Insertar nueva imagen"
                        onAction="#onInsertarImagen" />

                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="btnEliminar"
                                prefWidth="100"
                                style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-background-radius: 8;"
                                text="Eliminar"
                                onAction="#onEliminar" />
                        <Button fx:id="btnAceptar"
                                prefWidth="100"
                                style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-background-radius: 8;"
                                text="Aceptar"
                                onAction="#onAceptar" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Título -->
        <Label layoutX="238.0" layoutY="14.0"
               prefHeight="33.0" prefWidth="130.0"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               text="Editar evento"
               textAlignment="RIGHT" />

        <!-- Botón volver -->
        <Button fx:id="btnBack"
                graphicTextGap="10.0"
                layoutX="20.0"
                layoutY="3.0"
                mnemonicParsing="false"
                prefHeight="47.0"
                prefWidth="49.0"
                style="-fx-background-color: #007bff; -fx-background-radius: 15;"
                textFill="WHITE"
                onAction="#onBack">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <Label layoutX="22.0" layoutY="-16.0"
               text="←"
               textFill="WHITE">
            <font>
                <Font size="54.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
