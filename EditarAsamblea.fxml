<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.evento.EditarAsamblea"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f5f7fb;">

    <children>
        <!-- Título -->
        <Label text="Editar Asamblea" layoutX="30" layoutY="20"
               style="-fx-font-size: 26px; -fx-font-weight: bold;" />

        <!-- Panel principal con fondo gris claro -->
        <AnchorPane layoutX="30" layoutY="70" prefWidth="540" prefHeight="280"
                    style="-fx-background-color: #dbe0e6; -fx-background-radius: 20;">
            <children>
                <!-- Nombre -->
                <Label text="Nombre" layoutX="20" layoutY="20"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <TextField fx:id="txtNombre" layoutX="20" layoutY="45" prefWidth="200"
                           promptText="Nombre de asamblea" />

                <!-- Fecha -->
                <Label text="Fecha" layoutX="280" layoutY="20"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <TextField fx:id="txtFecha" layoutX="280" layoutY="45" prefWidth="200"
                           promptText="Fecha de inicio asamblea" />

                <!-- Participantes -->
                <Label text="Participantes" layoutX="20" layoutY="90"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <TextField fx:id="txtParticipantes" layoutX="20" layoutY="115" prefWidth="200"
                           promptText="Numero maximo de los participantes" />

                <!-- Editar hora de inicio -->
                <Label text="Editar hora de inicio" layoutX="280" layoutY="90"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <TextField fx:id="txtHoraInicio" layoutX="280" layoutY="115" prefWidth="200"
                           promptText="Hora de inicio" />

                <!-- Lugar -->
                <Label text="Lugar" layoutX="20" layoutY="160"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <TextField fx:id="txtLugar" layoutX="20" layoutY="185" prefWidth="200"
                           promptText="Lugar de asamblea" />

                <!-- Editar hora de final -->
                <Label text="Editar hora de final" layoutX="280" layoutY="160"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <TextField fx:id="txtHoraFinal" layoutX="280" layoutY="185" prefWidth="200"
                           promptText="Hora de fin" />

                <!-- Botón -->
                <Button fx:id="btnEditarParticipantes" text="Editar participantes"
                        layoutX="370" layoutY="230" prefWidth="140" prefHeight="40"
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 10;" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
